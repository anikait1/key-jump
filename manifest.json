{
  "manifest_version": 3,
  "name": "Key Jump",
  "version": "0.1.0",
  "description": "Keyboard hints for websites with per-site selector configuration",
  "permissions": [],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Keyboard Hints"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon-16x16.png",
    "32": "icons/icon-32x32.png",
    "64": "icons/icon-64x64.png",
    "128": "icons/icon-128x128.png"
  }
}
